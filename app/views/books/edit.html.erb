<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



  		<h1>Editing Book</h1>

  		 <div id="error_explanation">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <li>
            <% @book.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
            </li>
          </ul>
        <% end %>
      </div>


  		<%= form_with model: @book, url:book_path, local:true do |f| %>
  		<div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="book_title">Opinion</label>
        <%= f.text_area :body, class:"form-control book_title" %>
      </div>
      <div class="form-group">
      <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
      <a><%=link_to "Show", book_path %></a> | <a><%=link_to "Back", books_path %></a>
  	</div>
  </div>
  </div>
  </p>
  </main>
