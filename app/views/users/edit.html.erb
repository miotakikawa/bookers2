<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <li><% @user.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
          </li>
        </ul>
        <% end %>
      </div>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",class: "form-control name"%>
        </div>
        <div class="form-group">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
        <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" ,class: "form-control-file user_image"%>
        </div>
        <div class="form-group">
        <label for="inputName">introduction</label>
        <%= f.text_area :introduction,class: "form-control introduction" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>